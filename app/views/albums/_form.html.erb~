<%= form_for(@albums) do |f| %>
  <% if @albums.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@albums.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @albums.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist_id %><br />
    <%= f.number_field :artist_id %>
  </div>
  <div class="field">
    <%= f.label :cover %><br />
    <%= f.text_field :cover %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
